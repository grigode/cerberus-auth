############################
# Application Configuration
############################

# Application name used for logs, monitoring, mails, and internal identification.
APP_NAME=Cerberus Auth

# Port where the HTTP server will listen.
# Must be a valid TCP port (1â€“65535).
PORT=8000


############################
# Database Configuration
############################

# Main database host.
# Use "localhost" for local development or a hostname/IP in production.
MAIN_DATABASE_HOST=localhost

# Database port.
# Common values:
# - 3306 for MySQL / MariaDB
# - 5432 for PostgreSQL
MAIN_DATABASE_PORT=3306

# Database user with read/write permissions.
MAIN_DATABASE_USERNAME=root

# Database user password.
MAIN_DATABASE_PASSWORD=password

# Database name used by the application.
MAIN_DATABASE_NAME=cerberus_auth

# Enables automatic schema synchronization.
# WARNING: Do NOT enable in production.
# Accepted values: true | false
MAIN_DATABASE_SYNCHRONIZE=true

# Database timezone used for connections.
# Example: +00:00 (UTC)
MAIN_DATABASE_TIMEZONE=+00:00


############################
# Security Configuration
############################

# Enables Content Security Policy (CSP) headers.
# Recommended: true in production.
CONTENT_SECURITY_POLICY=false

# Secret key used for signing and encrypting cookies.
# Must be a long, random, and private value in production.
COOKIE_KEY=cookie_key

# Allowed CORS origins.
# Comma-separated list of URLs.
# Example: http://localhost:3000,https://myapp.com
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Allows cookies and authorization headers in CORS requests.
# Accepted values: true | false
CORS_CREDENTIALS=false

# Allowed HTTP methods for CORS.
# Use "*" to allow all methods or specify a comma-separated list.
# Example: GET,POST,PUT,DELETE
CORS_METHODS=*
